<h1>Speedy Pixel Burger Bar!</h1>

<div class="row">

  <div class="col-md-6">
    <h2>Burgers ready to eat!</h2>

    <ol>
      {{#each burgers}}
        {{#unless this.devoured}}
        <li>

          {{this.burger_name}}
          {{#unless this.devoured}}
            <button class="change-devoured" data-id="{{id}}">
              Devour it!
            </button>
          {{/unless}}

        </li>

        {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col-md-6">
    <h2>Devoured burgers!</h2>

    <ol>
      {{#each burgers}}
        {{#if this.devoured}}
        <li>

          {{this.burger_name}}
          {{#unless this.devoured}}
            <button class="change-devoured" data-id="{{id}}">
              Devour it!
            </button>
          {{/unless}}

        </li>

        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
